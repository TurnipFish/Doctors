<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_marginEnd="@dimen/margin_start_end_small"
        android:layout_marginStart="@dimen/margin_start_end_small"
        app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/doctor_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/teaser_cover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/teaser"
            />
            <LinearLayout
                    android:id="@+id/details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/teaser_cover"
                    android:orientation="horizontal">
                   <ImageView
                           android:id="@+id/doctor_cover"
                           android:layout_width="52dp"
                           android:layout_height="92dp"
                           android:layout_margin="@dimen/margin_start_end_average"/>
                    <LinearLayout
                           android:id="@+id/text_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/margin_start_end_average"
                            android:layout_marginTop="@dimen/margin_start_end_average"
                            android:layout_marginBottom="@dimen/margin_start_end_average"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/max_height"
                                android:maxHeight="@dimen/max_height"
                                android:textSize="@dimen/textSizeVeryLarge"
                                android:scrollbars="none"
                                android:layout_marginBottom="@dimen/margin_start_end_average"
                                android:textColor="@color/black"
                                android:text="Dr. Fritz Bauer"/>
                        <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/max_height"
                                android:textSize="@dimen/textSizeAverage"
                                android:scrollbars="none"
                                android:textColor="@color/black"
                                android:text="Köpenicker Straße, 10997 Berlin, Germany"/>
                    </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
