<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/custom_dialog_container"
        android:background="@drawable/dialog_background"
        android:elevation="8dp"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dialog_margin_start_end"
            android:layout_marginEnd="@dimen/dialog_margin_start_end"
            android:scrollbars="none"
            android:gravity="bottom"
            android:textSize="@dimen/textSizeAverage"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:alpha="0.87"
            />
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeAverage"
            android:scrollbars="none"
            android:layout_marginStart="@dimen/dialog_margin_start_end"
            android:layout_marginEnd="@dimen/dialog_margin_start_end"
            android:layout_marginTop="@dimen/margin_top_bottom_small"
            android:layout_marginBottom="@dimen/margin_top_bottom_small"
            android:textStyle="bold"
            android:layout_below="@+id/header"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:alpha="0.60"
            />
        <TextView
            android:id="@+id/message2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="@dimen/textSizeAverage"
            android:layout_marginStart="@dimen/dialog_margin_start_end"
            android:layout_marginEnd="@dimen/dialog_margin_start_end"
            android:layout_marginTop="@dimen/margin_top_bottom_small"
            android:layout_marginBottom="@dimen/margin_top_bottom_small"
            android:textStyle="bold"
            android:layout_below="@+id/message"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:scrollbars="none"
            android:alpha="0.60"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/message3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeAverage"
            android:layout_marginStart="@dimen/dialog_margin_start_end"
            android:layout_marginEnd="@dimen/dialog_margin_start_end"
            android:layout_marginTop="@dimen/margin_top_bottom_small"
            android:layout_marginBottom="@dimen/margin_top_bottom_small"
            android:textStyle="bold"
            android:scrollbars="none"
            android:layout_below="@+id/message2"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:alpha="0.60"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/dialog_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dialog_margin_start_end"
            android:layout_marginEnd="@dimen/dialog_margin_start_end"
            android:layout_below="@+id/message"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="@string/ok"
                android:textColor="@color/colorPrimaryText" />
        </RelativeLayout>
    </RelativeLayout>


